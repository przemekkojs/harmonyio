@page
@model Main.Pages.GradeModel
@{
}


<head>
    <link rel="stylesheet" href="~/css/grade-style.css" />
</head>


<div class="h-100 w-100 d-flex flex-column">
    <div class="flex-grow-1 d-flex overflow-auto">
        <div class="left-panel overflow-auto">
            <div class="fw-bold fs-4 mb-3 me-3">
                Kartkówka 2A
            </div>

            @for (int i = 0; i < 15; i++)
            {
                <div class="student-row d-flex flex-row @(i < 14 ? "mb-2" : "mb-3")">
                    <div class="flex-grow-1 border border-secondary rounded d-flex align-items-center p-2 me-2 overflow-hidden @(i==3 ? "bg-secondary" : "")">
                        <div class="student-name @(i==3 ? "text-white" : "")">Kamil Nowak</div>
                    </div>
                    <div class="student-grade border border-secondary rounded d-flex align-items-center justify-content-center p-2 me-3 @(i==3 ? "bg-secondary" : "")">
                        <div class="@(i==3 ? "text-white" : "")">-</div>
                    </div>
                </div>
            }
        </div>

        <div class="vr"></div>

        <div class="flex-grow-1 d-flex flex-column overflow-auto">
            <div class="top-bar d-flex justify-content-between align-items-center ms-3">
                <div class="fw-bold fs-4">
                    Kamil Nowak
                </div>
                <div class="d-flex align-items-center">
                    <span class="fw-bold me-2">Wynik</span>
                    <div class="border border-dark rounded px-2 py-1 me-2 text-nowrap">51 / 128</div>
                    <div class="border border-dark rounded px-2 py-1 me-4">40%</div>
                    <span class="fw-bold me-2">Ocena</span>
                    <select class="grade-select form-select border border-dark rounded px-2 py-1" aria-label="Wybierz ocenę">
                        <option value="-" selected>-</option>
                        <option value="1">1</option>
                        <option value="2-">2-</option>
                        <option value="2">2</option>
                        <option value="2+">2+</option>
                        <option value="3-">3-</option>
                        <option value="3">3</option>
                        <option value="3+">3+</option>
                        <option value="4-">4-</option>
                        <option value="4">4</option>
                        <option value="4+">4+</option>
                        <option value="5-">5-</option>
                        <option value="5">5</option>
                        <option value="5+">5+</option>
                        <option value="6">6</option>
                    </select>
                </div>
            </div>

            <hr class="hr mt-3">

            <div class="flex-grow-1 d-flex flex-column ps-3 overflow-auto">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="d-flex flex-row align-items-start question-area mt-3">
                        <div class="question-square border border-secondary d-flex justify-content-center align-items-center me-3">
                            <div class="fs-1 fw-bold">@(i+1)</div>
                        </div>

                        <div class="flex-grow-1">
                            <p class="m-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
                        </div>
                    </div>

                    <div class="music-staff mt-3 d-flex flex-row justify-content-center align-items-center">
                        <div class="music-staff-grade-area h-100 d-flex flex-column overflow-hidden">
                            <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center p-1">
                                <span class="fw-bold">Sugestia</span>
                                <span>15 / 32</span>
                            </div>
                            <hr class="hr">
                            <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center">
                                <span class="fw-bold mb-1">Wynik</span>
                                <input type="number" class="form-control points-input border border-dark rounded" placeholder="15" value="15" />
                            </div>
                            <hr class="hr">
                            <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center">
                                <span class="fw-bold mb-1">Max</span>
                                <input type="number" class="form-control points-input border border-dark rounded" placeholder="32" value="32" />
                            </div>
                        </div>
                        <div class="vr"></div>
                        <div class="flex-grow-1 h-100 d-flex justify-content-center align-items-center">
                            Pięciolinia
                        </div>
                    </div>

                    <div class="my-3">
                        <span class="fw-bold">Komentarz</span>
                        <textarea id="comment" class="form-control border-dark rounded overflow-hidden mt-2" rows="1" placeholder="Dodaj komentarz..." oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"></textarea>
                    </div>

                    @if (i < 4)
                    {
                        <hr class="hr"/>
                    }
                }
            </div>
        </div>
    </div>

    <hr class="hr">

    <div class="bottom-bar d-flex align-items-center">
        <button class="btn btn-danger btn-std-width me-3">Powrót</button>
        <button class="btn btn-secondary btn-std-width ms-auto">Poprzedni</button>
        <button class="btn btn-secondary btn-std-width ms-3">Nastepny</button>
    </div>
</div>
