@page
@model Main.Pages.IndexModel
@{
}

<head>
    <link rel="stylesheet" href="~/css/bg-pattern-style.css" />
</head>

<style>
    .tile {
        width: 20vw;
        height: 17vw;
        border-radius: 10px;
        transition: transform 0.2s;
        text-align: center;
        text-decoration: none;
    }
    .tile:hover {
        transform: scale(1.05); 
    }
</style>


<div class="h-100 w-100 d-flex flex-row overflow-auto justify-content-center align-items-center">
    <!-- Created -->
    <a asp-page="Assigned"
       class="tile shadow bg-white d-flex align-items-center justify-content-center flex-column p-4 me-5">

        <h3 class="mb-2 text-dark fw-bold">Przypisane<br />Quizy</h3>
    </a>

    <!-- Join -->
    <form method='get' action="/solve"
          class="tile shadow bg-white d-flex align-items-center justify-content-center flex-column p-4 me-5">

        <h3 class="mb-3 text-dark fw-bold">Dołącz</h3>

        <input id="code" class="form-control text-center fw-bold mb-1" name="id" type="text" placeholder="Kod quizu" required />
        <button type="submit" class="btn btn-secondary fw-bold w-100 m-2">Wprowadź</button>
    </form>

    <!-- Assigned -->
    <a asp-page="Created"
       class="tile shadow bg-white d-flex align-items-center justify-content-center flex-column p-4">
        
        <h3 class="mb-2 text-dark fw-bold">Utworzone<br />Quizy</h3>
    </a>
</div>