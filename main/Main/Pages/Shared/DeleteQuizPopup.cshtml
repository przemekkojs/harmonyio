@*
DELETE QUIZ MODAL POPUP

ATRYBUTY:
    - data-quiz-name: Nazwa quizu
    - data-on-delete: Callback js, wywołany przy wciśnięciu przycisku delete
*@

<div class="modal fade" id="deleteQuizPopup" tabindex="-1" role="dialog" aria-labelledby="deletePopupCenterTitle" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePopupLongTitle">Usunąć quiz?</h5>
            </div>
            <div class="modal-body">
                <span>Jesteś pewny, że chcesz usunąć quiz</span>
                <span id="deletedQuizName" class="m-0">"Kartkówka 2A"?</span>
                <span>Ta akcja nie może zostać cofnięta.</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="deleteButton">Usuń</button>
            </div>
        </div>
    </div>
</div>

<script>
    var deleteQuizPopup = document.getElementById('deleteQuizPopup');
    deleteQuizPopup.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var quizName = button.getAttribute('data-quiz-name');
        var onDelete = button.getAttribute('data-on-delete');

        var nameElement = deleteQuizPopup.querySelector('#deletedQuizName');
        nameElement.textContent = '"' + quizName + '"?';

        var deleteButton = deleteQuizPopup.querySelector('#deleteButton');
        deleteButton.setAttribute('onclick', onDelete);
    });
</script>