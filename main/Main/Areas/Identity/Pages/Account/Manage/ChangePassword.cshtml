@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Harmony.io - Zmień hasło";
}

<div class="w-100">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="mb-3">
            <label asp-for="Input.OldPassword" class="ps-1 pb-1 fw-bold">Aktualne hasło</label>
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Wprowadź aktualne hasło" />
            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.NewPassword" class="ps-1 pb-1 fw-bold">Nowe hasło</label>
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Wprowadź nowe hasło" />
            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="ps-1 pb-1 fw-bold">Powtórz nowe hasło</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Powtórz nowe hasło"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="w-100 mt-3 btn btn-lg btn-primary">Aktualizuj hasło</button>
    </form>
</div>

<script>
    document.getElementById("layout-main-container").classList.remove("overflow-auto");
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

