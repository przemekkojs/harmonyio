@page
@model ChangeNameModel

<div class="w-100">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="ps-1 pb-1 fw-bold">ImiÄ™</label>
            <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" value="@Model.CurrentUser.FirstName"/>
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Surname" class="ps-1 pb-1 fw-bold">Nazwisko</label>
            <input asp-for="Surname" class="form-control" autocomplete="username" aria-required="true" value="@Model.CurrentUser.LastName"/>
            <span asp-validation-for="Surname" class="text-danger small"></span>
        </div>

        <button type="submit" class="w-100 mt-3 btn btn-lg btn-primary">Zapisz</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}