@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center" style="min-height: 100%;"> 
    <div class="bg-white rounded shadow p-3 mb-3" style="width: 400px;">
        <h2 class="text-center fw-bold mb-4">Zaloguj się</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="ps-1 pb-1 fw-bold">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Input.Password" class="ps-1 pb-1 fw-bold">Hasło</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                
                <div class="mb-2 small">
                    Nie pamiętasz hasła? 
                    <a id="forgot-password" asp-page="./ForgotPassword">Resetuj hasło</a>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-primary p-2 my-3">Zaloguj się</button>

                <div class="mb-2 small text-center">
                    Nie masz konta? 
                    <a id="forgot-password" asp-page="./Register">Zarejestruj się</a>
                </div>
            </form>
    </div>
</div> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

